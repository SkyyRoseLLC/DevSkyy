modules = ["python-3.12", "postgresql-16"]

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "geckodriver", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "python313Packages.pytest", "qhull", "tcl", "tk", "xcodebuild", "zlib"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 44005262
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow]]
name = "Continuous Monitoring"
author = 44005262
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = '''python -c "from main import monitor_wordpress_continuously, monitor_web_development_continuously, manage_avatar_chatbot_continuously; import time; while True: wp=monitor_wordpress_continuously(); dev=monitor_web_development_continuously(); chat=manage_avatar_chatbot_continuously(); print(f'WordPress: {wp[\"overall_status\"]} | Development: {dev[\"development_status\"]} | Chatbot: {chat[\"chatbot_status\"]}'); time.sleep(300)"'''

[[ports]]
localPort = 8000
externalPort = 80

[deployment]
run = ["sh", "-c", "uvicorn main:app --host 0.0.0.0 --port 8000"]
