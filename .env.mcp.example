# ============================================================================
# DevSkyy MCP Servers Configuration
# Copy to .env and fill in your API keys
# ============================================================================

# Core DevSkyy API Configuration
DEVSKYY_API_URL=http://localhost:8000
DEVSKYY_API_KEY=your_devskyy_api_key_here

# AI Provider API Keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
OPENAI_API_KEY=sk-your-openai-key-here
HUGGINGFACE_API_KEY=hf_your-huggingface-key-here
GOOGLE_API_KEY=your-google-gemini-key-here

# Database Configuration
DATABASE_URL=postgresql://devskyy:changeme@postgres:5432/devskyy
POSTGRES_DB=devskyy
POSTGRES_USER=devskyy
POSTGRES_PASSWORD=changeme

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security Keys (Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=change-me-in-production-min-32-characters
JWT_SECRET_KEY=change-me-in-production-min-32-characters
JWT_REFRESH_SECRET_KEY=change-me-in-production-min-32-characters

# WordPress Integration (Optional)
WORDPRESS_URL=https://your-site.com
WORDPRESS_USERNAME=admin
WORDPRESS_APP_PASSWORD=your-wordpress-app-password

# Social Media API Keys (Optional)
META_ACCESS_TOKEN=your-facebook-instagram-access-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# Email Configuration (Optional)
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Payment Gateways (Optional)
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Monitoring & Analytics (Optional)
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=30d
SENTRY_DSN=your-sentry-dsn

# MCP Server Ports
MCP_INFRASTRUCTURE_PORT=5001
MCP_ECOMMERCE_PORT=5002
MCP_WORDPRESS_PORT=5003
MCP_AIML_PORT=5004
MCP_MARKETING_PORT=5005
MCP_ORCHESTRATION_PORT=5006

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Docker Build Args
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
VCS_REF=$(git rev-parse HEAD)
