# Dockerfile for DevSkyy MCP Servers
FROM python:3.11-slim

# Set build argument for MCP server type
ARG MCP_SERVER=infrastructure

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements_mcp.txt .
RUN pip install --no-cache-dir -r requirements_mcp.txt

# Copy MCP server code
COPY mcp_servers/ ./mcp_servers/

# Expose MCP port
EXPOSE ${MCP_PORT:-5001}

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:${MCP_PORT:-5001}/health || exit 1

# Run the specific MCP server
CMD python3 -m mcp_servers.${MCP_SERVER}_mcp
