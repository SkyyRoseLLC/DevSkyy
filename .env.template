# ==============================================================================
# DevSkyy Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual values
# File location: /Users/coreyfoster/DevSkyy/.env
# ==============================================================================

# ==============================================================================
# CRITICAL - REQUIRED FOR DEPLOYMENT
# ==============================================================================

# Secret Key - Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=REPLACE_WITH_SECURE_RANDOM_32_CHAR_STRING

# Anthropic API Key - Get from: https://console.anthropic.com/
# Required for Claude AI features
ANTHROPIC_API_KEY=sk-ant-REPLACE_WITH_YOUR_ANTHROPIC_KEY

# Database Configuration (SQLAlchemy)
# SQLite (Development - Default):  sqlite+aiosqlite:///./devskyy.db
# PostgreSQL (Neon):               postgresql+asyncpg://user:pass@host/db
# PostgreSQL (Supabase):           postgresql+asyncpg://user:pass@host:5432/db
# MySQL (PlanetScale):             mysql+aiomysql://user:pass@host/db
# Leave blank to use default SQLite
DATABASE_URL=

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

APP_NAME=DevSkyy Enhanced Platform
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==============================================================================
# RECOMMENDED - FOR FULL FUNCTIONALITY
# ==============================================================================

# OpenAI API Key - Get from: https://platform.openai.com/api-keys
# Required for GPT-4 features and multi-model orchestration
OPENAI_API_KEY=

# Meta/Facebook Access Token - Get from: https://developers.facebook.com/
# Required for social media automation
META_ACCESS_TOKEN=

# ElevenLabs API Key - Get from: https://elevenlabs.io/
# Required for voice/audio features
ELEVENLABS_API_KEY=

# Redis URL - For caching (recommended for production)
# Local:  redis://localhost:6379
# Cloud:  redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# ==============================================================================
# OPTIONAL - FOR ADVANCED FEATURES
# ==============================================================================

# Stripe - For payment processing
STRIPE_SECRET_KEY=

# Shopify - For e-commerce integration
SHOPIFY_API_KEY=

# Blockchain/Web3
ETH_RPC_URL=
POLYGON_RPC_URL=

# WordPress Integration
WORDPRESS_URL=
WORDPRESS_USERNAME=
WORDPRESS_PASSWORD=

# Email/SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=

# JWT Configuration
JWT_SECRET=change_me_to_secure_random_string
JWT_ALGORITHM=HS256

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# ==============================================================================
# PERFORMANCE & FEATURE FLAGS
# ==============================================================================

CACHE_TTL=300
MAX_WORKERS=4
RATE_LIMIT=100/minute

ENABLE_AUTO_FIXES=true
ENABLE_24_7_MONITORING=true
ENABLE_AI_OPTIMIZATION=true
ENABLE_BRAND_LEARNING=true

