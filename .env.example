# DevSkyy Enhanced Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# === Application Settings ===
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ENVIRONMENT=production

# === Database Configuration ===
DATABASE_URL=sqlite:///app.db
MONGO_URL=mongodb://localhost:27017/skyy_rose_agents
# For production MongoDB Atlas:
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# === Redis Cache Configuration ===
REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=3600
CACHE_MEMORY_SIZE=1000

# === Authentication ===
JWT_SECRET_KEY=your-jwt-secret-key-here-minimum-32-chars

# === OpenAI API ===
OPENAI_API_KEY=sk-your-openai-api-key-here

# === WordPress Integration ===
WORDPRESS_SITE_URL=https://your-wordpress-site.com
WORDPRESS_USERNAME=your-wordpress-username
WORDPRESS_PASSWORD=your-wordpress-password
WORDPRESS_CLIENT_ID=your-wordpress-client-id
WORDPRESS_CLIENT_SECRET=your-wordpress-client-secret
WORDPRESS_REDIRECT_URI=http://localhost:8000/auth/wordpress/callback
WORDPRESS_TOKEN_URL=https://public-api.wordpress.com/oauth2/token
WORDPRESS_AUTHORIZE_URL=https://public-api.wordpress.com/oauth2/authorize
WORDPRESS_API_BASE=https://public-api.wordpress.com/rest/v1.1

# === SFTP/SSH Configuration ===
SFTP_HOST=sftp.wp.com
SFTP_PORT=22
SFTP_USERNAME=your-sftp-username
SFTP_PASSWORD=your-sftp-password
SSH_HOST=ssh.wp.com
SSH_USERNAME=your-ssh-username
SSH_KEY_NAME=your-ssh-key-name
SSH_PRIVATE_KEY_PATH=/path/to/your/private/key

# === WooCommerce Integration ===
WOOCOMMERCE_KEY=ck_your_woocommerce_consumer_key
WOOCOMMERCE_SECRET=cs_your_woocommerce_consumer_secret

# === Payment Processing ===
STRIPE_API_KEY=sk_your_stripe_api_key

# === Frontend Configuration ===
VITE_API_URL=http://localhost:8000
VITE_SOCKET_URL=ws://localhost:8000
VITE_ENV=production

# === Email Configuration (if needed) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@skyyrose.co

# === Monitoring & Logging ===
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# === Security Headers ===
SECURITY_HEADERS_ENABLED=true
FORCE_HTTPS=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# === Rate Limiting ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour

# === Feature Flags ===
ENABLE_ADMIN_PANEL=true
ENABLE_API_DOCS=true
ENABLE_DEBUG_MODE=false