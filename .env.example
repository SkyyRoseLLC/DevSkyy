# DevSkyy Enhanced Platform - Environment Variables
# Production-grade configuration for AI-powered luxury e-commerce platform

# Application Settings
APP_NAME="DevSkyy Enhanced Platform"
APP_VERSION="2.0.0"
ENVIRONMENT="development"
DEBUG=True

# Server Configuration
HOST="0.0.0.0"
PORT=5000
CORS_ORIGINS="http://localhost:3000,https://devskyy.app,https://skyyrose.co"

# Database Configuration
MONGODB_URL="mongodb://localhost:27017"
DATABASE_NAME="devskyy_enhanced"

# API Keys (Replace with actual values in production)
OPENAI_API_KEY="your_openai_api_key_here"
GITHUB_TOKEN="your_github_token_here"

# WordPress Integration
WORDPRESS_CLIENT_ID="your_wordpress_client_id_here"
WORDPRESS_CLIENT_SECRET="your_wordpress_client_secret_here"
WORDPRESS_REDIRECT_URI="https://devskyy.app/auth/wordpress/callback"

# Security Settings
SECRET_KEY="your_secure_secret_key_here"
JWT_SECRET_KEY="your_jwt_secret_key_here"
ENCRYPTION_KEY="your_encryption_key_here"

# Email Configuration
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
EMAIL_USER="your_email@example.com"
EMAIL_PASSWORD="your_email_password_here"

# Social Media API Keys
INSTAGRAM_ACCESS_TOKEN="your_instagram_token_here"
TIKTOK_ACCESS_TOKEN="your_tiktok_token_here"
FACEBOOK_ACCESS_TOKEN="your_facebook_token_here"
TWITTER_API_KEY="your_twitter_api_key_here"

# Performance Settings
CACHE_TTL=300
MAX_WORKERS=4
RATE_LIMIT="100/minute"

# Monitoring & Analytics
SENTRY_DSN="your_sentry_dsn_here"
ANALYTICS_TRACKING_ID="your_analytics_id_here"

# Feature Flags
ENABLE_AUTO_FIXES=true
ENABLE_24_7_MONITORING=true
ENABLE_AI_OPTIMIZATION=true
ENABLE_BRAND_LEARNING=true