# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
NODE_ENV=production
PYTHONPATH=/app
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com/api

# Database Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=your_secure_mongo_password_here
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DATABASE=skyy_rose_platform

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Security Keys (Generate strong random keys)
SECRET_KEY=your_super_secret_key_here_min_32_chars
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
ENCRYPTION_KEY=your_encryption_key_here_32_bytes

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@your-domain.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# WordPress Integration
WP_ADMIN_URL=https://your-wordpress-site.com/wp-admin
WP_USERNAME=your_wp_username
WP_PASSWORD=your_wp_password
WP_SFTP_HOST=your-host.com
WP_SFTP_USERNAME=your_sftp_username
WP_SFTP_PASSWORD=your_sftp_password

# Social Media APIs
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# SSL Configuration (for nginx-proxy)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_ENTRIES=1000