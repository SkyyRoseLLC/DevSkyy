# DevSkyy Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE PLATFORM CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=production
DEBUG=false

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-here-different-from-secret-key

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/devskyy
MONGODB_DATABASE=devskyy
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AI & MACHINE LEARNING SERVICES
# =============================================================================

# OpenAI Configuration (Required for AI agents)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# =============================================================================
# WORDPRESS & WOOCOMMERCE INTEGRATION
# =============================================================================

# WordPress Connection (GOD MODE Level 2)
WORDPRESS_URL=https://your-wordpress-site.com
WORDPRESS_USERNAME=your_wordpress_username
WORDPRESS_PASSWORD=your_wordpress_app_password
WORDPRESS_API_KEY=your_wordpress_api_key

# WooCommerce API Configuration
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key_here
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret_here
WOOCOMMERCE_API_VERSION=wc/v3

# =============================================================================
# SERVER ACCESS CONFIGURATION (SECURE)
# =============================================================================

# SFTP/SSH Server Access (Use environment variables, NOT hardcoded)
SSH_HOST=your-server-host.com
SSH_PORT=22
SSH_USERNAME=your_ssh_username
SSH_PRIVATE_KEY_PATH=/path/to/your/private/key
SSH_PASSWORD=your_ssh_password_if_needed
SFTP_ROOT_PATH=/var/www/html

# Server Monitoring
MONITORING_INTERVAL=30
AUTO_FIX_ENABLED=true
EXECUTIVE_MODE=true

# =============================================================================
# SOCIAL MEDIA AUTOMATION
# =============================================================================

# Instagram Integration
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_id

# Facebook Integration
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FACEBOOK_PAGE_ID=your_facebook_page_id
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# TikTok Integration
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Twitter/X Integration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# =============================================================================
# EMAIL & SMS AUTOMATION
# =============================================================================

# SendGrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@your-domain.com
SENDGRID_FROM_NAME=Your Brand Name

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_PHONE=+1234567890

# Mailchimp Integration (Optional)
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_SERVER_PREFIX=us1

# =============================================================================
# PAYMENT & FINANCIAL SERVICES
# =============================================================================

# Stripe Payment Processing
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Integration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# =============================================================================
# SEO & ANALYTICS SERVICES
# =============================================================================

# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
GOOGLE_ANALYTICS_API_KEY=your_google_analytics_api_key

# Google Search Console
GOOGLE_SEARCH_CONSOLE_API_KEY=your_search_console_api_key

# SEO Tools
SEMRUSH_API_KEY=your_semrush_api_key
AHREFS_API_KEY=your_ahrefs_api_key

# =============================================================================
# CLOUD STORAGE & CDN
# =============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Cloudflare CDN
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Development Settings
LOG_LEVEL=INFO
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Testing Configuration
TEST_DATABASE_URL=mongodb://localhost:27017/devskyy_test
TEST_OPENAI_API_KEY=your_test_openai_key

# =============================================================================
# LUXURY BRAND CONFIGURATION
# =============================================================================

# Brand Settings
LUXURY_BRAND_MODE=true
BRAND_NAME=The Skyy Rose Collection
BRAND_DOMAIN=skyyrose.co
BRAND_COLOR_PRIMARY=#1a1a1a
BRAND_COLOR_SECONDARY=#d4af37

# Performance Targets
TARGET_PAGE_SPEED_SCORE=95
TARGET_CONVERSION_RATE=15
TARGET_CUSTOMER_SATISFACTION=4.8

# =============================================================================
# MONITORING & ALERTING
# =============================================================================

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Monitoring Services
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#devskyy-alerts

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================

# Rate Limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600

# Session Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5

# Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=365