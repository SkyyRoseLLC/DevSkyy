# ==============================================================================
# DevSkyy Enterprise Platform - Environment Configuration Template
# ==============================================================================
# Copy this file to .env and replace placeholders with your actual values.
# SECURITY WARNING: Do not commit .env file to version control!
# ==============================================================================

# ------------------------------------------------------------------------------
# Environment
# ------------------------------------------------------------------------------
ENVIRONMENT=development
NODE_ENV=development
APP_NAME=DevSkyy Enterprise Platform
APP_VERSION=5.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000
APP_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# ------------------------------------------------------------------------------
# DevSkyy API Configuration
# ------------------------------------------------------------------------------
DEVSKYY_API_KEY=your_api_key_here
DEVSKYY_API_URL=http://localhost:8000

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@host:5432/database
NEON_DATABASE_URL=postgresql://user:password@neon-host/database?sslmode=require
LOCAL_DATABASE_URL=postgresql://user:password@localhost:5433/database

DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ------------------------------------------------------------------------------
# Security & Authentication
# ------------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ------------------------------------------------------------------------------
# Redis Cache
# ------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=50
REDIS_DEFAULT_TTL=3600

# ------------------------------------------------------------------------------
# AI API Keys
# ------------------------------------------------------------------------------
ANTHROPIC_API_KEY=your_anthropic_key
OPENAI_API_KEY=your_openai_key
HUGGINGFACE_TOKEN=your_hf_token
GEMINI_API_KEY=your_gemini_key

AI_DEFAULT_MODEL=claude-sonnet-4-5
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# ------------------------------------------------------------------------------
# MCP Orchestrator
# ------------------------------------------------------------------------------
MCP_CONFIG_PATH=/tmp/DevSkyy/config/mcp/mcp_tool_calling_schema.json
BRAND_CONFIG_PATH=/tmp/DevSkyy/config/mcp/skyy_rose_brand_config.json
PYTHONPATH=/tmp/DevSkyy

# ------------------------------------------------------------------------------
# WordPress & E-Commerce
# ------------------------------------------------------------------------------
SKYY_ROSE_SITE_URL=https://yoursite.com
SKYY_ROSE_USERNAME=your_username
SKYY_ROSE_PASSWORD=your_password
SKYY_ROSE_APP_PASSWORD=your_app_password

WOOCOMMERCE_URL=https://yoursite.com
WOOCOMMERCE_CONSUMER_KEY=your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=your_consumer_secret

STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret

# ------------------------------------------------------------------------------
# Social Media
# ------------------------------------------------------------------------------
META_ACCESS_TOKEN=your_meta_token
META_APP_ID=your_app_id
META_APP_SECRET=your_app_secret
INSTAGRAM_ACCOUNT_ID=your_ig_id
FACEBOOK_PAGE_ID=your_fb_page_id

# ------------------------------------------------------------------------------
# Voice & Audio
# ------------------------------------------------------------------------------
ELEVENLABS_API_KEY=your_elevenlabs_key
ELEVENLABS_VOICE_ID=your_voice_id

# ------------------------------------------------------------------------------
# Email
# ------------------------------------------------------------------------------
SENDGRID_API_KEY=your_sendgrid_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email
SMTP_PASSWORD=your_password

# ------------------------------------------------------------------------------
# Cloud Storage
# ------------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=your_bucket
AWS_REGION=us-east-1

# ------------------------------------------------------------------------------
# Monitoring
# ------------------------------------------------------------------------------
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin
LOG_LEVEL=INFO

# ------------------------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------------------------
ENABLE_AUTO_FIXES=true
ENABLE_24_7_MONITORING=true
ENABLE_AI_OPTIMIZATION=true
ENABLE_BRAND_LEARNING=true
ENABLE_ANALYTICS=true
ML_MODEL_AUTO_RETRAIN=true
ML_CONFIDENCE_THRESHOLD=0.85
ENABLE_THEME_AUTO_DEPLOY=false
ENABLE_CONTENT_AUTO_PUBLISH=false
