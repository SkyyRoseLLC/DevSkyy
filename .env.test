# Development Environment Test Files
# Copy this to .env.test for running tests

# Test Database Configuration
MONGODB_URL=mongodb://localhost:27017/devskyy_test
REDIS_URL=redis://localhost:6379/1

# Test Security Configuration  
SECRET_KEY=test-secret-key-for-development-only-change-in-production
JWT_SECRET_KEY=test-jwt-secret-key-different-from-secret-key

# Test AI Configuration (use test keys or mock)
OPENAI_API_KEY=test-openai-key-or-mock
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Test Mode Settings
NODE_ENV=test
DEBUG=true
LOG_LEVEL=DEBUG

# Disable external services in tests
ENABLE_EXTERNAL_APIS=false
ENABLE_WORDPRESS_INTEGRATION=false
ENABLE_SOCIAL_MEDIA=false
ENABLE_EMAIL_SMS=false

# Test Performance Settings
API_RATE_LIMIT=10000
SESSION_TIMEOUT=7200