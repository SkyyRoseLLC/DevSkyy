{
  "actions_to_update": {
    "actions/checkout": {
      "versions": ["v4"],
      "priority": "high",
      "description": "Repository checkout action - critical for all workflows"
    },
    "actions/setup-python": {
      "versions": ["v4", "v5"],
      "priority": "high",
      "description": "Python environment setup - essential for backend operations"
    },
    "actions/setup-node": {
      "versions": ["v5"],
      "priority": "high",
      "description": "Node.js environment setup - required for frontend builds"
    },
    "actions/github-script": {
      "versions": ["v6"],
      "priority": "medium",
      "description": "GitHub API interactions and automation"
    },
    "actions/upload-artifact": {
      "versions": ["v4"],
      "priority": "medium",
      "description": "Artifact upload for build outputs and reports"
    },
    "actions/stale": {
      "versions": ["v5"],
      "priority": "low",
      "description": "Automated stale issue and PR management"
    },
    "actions/configure-pages": {
      "versions": ["v5"],
      "priority": "medium",
      "description": "GitHub Pages configuration"
    },
    "actions/deploy-pages": {
      "versions": ["v4"],
      "priority": "medium",
      "description": "GitHub Pages deployment"
    },
    "actions/jekyll-build-pages": {
      "versions": ["v1"],
      "priority": "medium",
      "description": "Jekyll site building for documentation"
    },
    "actions/upload-pages-artifact": {
      "versions": ["v3"],
      "priority": "medium",
      "description": "Pages artifact upload"
    },
    "github/codeql-action/init": {
      "versions": ["v3"],
      "priority": "high",
      "description": "CodeQL security scanning initialization - critical for security"
    },
    "github/codeql-action/analyze": {
      "versions": ["v3"],
      "priority": "high",
      "description": "CodeQL security analysis - critical for security"
    },
    "codecov/codecov-action": {
      "versions": ["v3"],
      "priority": "medium",
      "description": "Code coverage reporting"
    },
    "docker/build-push-action": {
      "versions": ["v5"],
      "priority": "medium",
      "description": "Docker image building and pushing"
    },
    "docker/login-action": {
      "versions": ["v3"],
      "priority": "medium",
      "description": "Docker registry authentication"
    },
    "docker/setup-buildx-action": {
      "versions": ["v3"],
      "priority": "medium",
      "description": "Docker Buildx setup for advanced builds"
    }
  },
  "backup_enabled": true,
  "dry_run": false,
  "rate_limit_delay": 1.0,
  "max_retries": 3,
  "security_compliance": {
    "enforce_sha_pinning": true,
    "minimum_sha_length": 40,
    "allowed_action_sources": [
      "actions/*",
      "github/*",
      "docker/*",
      "codecov/*"
    ]
  },
  "notification": {
    "create_pr_comment": true,
    "create_issue_on_failure": true,
    "slack_webhook": null
  }
}